package demo;

//Write a Java program that takes an email address as input and separates its contents into three categories:
//Alphabets (a–z, A–Z)
//Digits (0–9)
//Special characters (such as @, ., _, etc.)
import java.util.Scanner;

public class EmailSperation {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc=new Scanner(System.in);
		System.out.println("enter your email");
		String email=sc.next();
		System.out.println(email);
		StringBuffer isCharater=new StringBuffer();
		StringBuffer isDigit=new StringBuffer();
		StringBuffer isSpecialCase=new StringBuffer();
		for(int i=0;i<email.length();i++) {
			char ch=email.charAt(i);
			if(ch>='a'&&ch<='z') {
			  isCharater.append(ch);
			  
			  }
			else if(ch>='0'&&ch<='9')
			{
				isDigit.append(ch);
				
			}
			else {
				isSpecialCase.append(ch);
				
			}
		}
		System.out.println("Charater in email : "+isCharater);
		System.out.println("Digit in email : "+isDigit);
		System.out.println("SpecialCase in email : "+isSpecialCase);
	}

}
